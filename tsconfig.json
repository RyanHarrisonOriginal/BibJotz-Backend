{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/models/*": ["src/domain/*"],
      "@/commands/*": ["src/application/commands/*"],
      "@/queries/*": ["src/domain/User/queries/*"],
      "@/handlers/*": ["src/domain/User/commands/create-user/handlers/*"],
      "@/factories/*": ["src/domain/factories/*"],
      "@/mappers/*": ["src/infrastructure/mappers/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/routes/*": ["src/infrastructure/http/routes/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
