// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["app"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique @map("user_name")
  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  isPublic  Boolean  @default(true) @map("is_public")
  primaryChurchId  Int? @map("primary_church_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  church              Church?              @relation(fields: [primaryChurchId], references: [id])
  @@map("users")
  @@schema("app")
}

model Church {
  id        Int      @id @default(autoincrement())
  name      String
  street    String
  city      String
  state     String
  zip       String
  website   String?
  email     String?
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  users User[]

  @@map("churches")
  @@schema("app")
}

model Guide {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  biblicalReferences GuidBibleReference[]
  guideSections GuideSection[]
  isPublic Boolean @default(true) @map("is_public")
  authorId Int @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("guides")
  @@schema("app")
}

model GuidBibleReference {
  id        Int      @id @default(autoincrement())
  guideId Int @map("guide_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guide Guide @relation(fields: [guideId], references: [id])

  @@map("guide_biblical_references")
  @@schema("app")
}

model GuideSectionBibleReference {
  id        Int      @id @default(autoincrement())
  guideSectionId Int @map("guide_section_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guideSection GuideSection @relation(fields: [guideSectionId], references: [id])

  @@map("guide_section_biblical_references")
  @@schema("app")
}


model GuideSection {
  id Int @id @default(autoincrement())
  guideId Int @map("guide_id")
  ordinalPosition Int @map("ordinal_position")
  title String
  description String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  guide Guide @relation(fields: [guideId], references: [id])
  biblicalReferences GuideSectionBibleReference[]
  @@map("guide_sections")
  @@schema("app")
}
