// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["app"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique @map("user_name")
  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  isPublic  Boolean  @default(true) @map("is_public")
  primaryChurchId  Int? @map("primary_church_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  church              Church?              @relation(fields: [primaryChurchId], references: [id])
  guideDrafts         GuideDraft[]
  guides              Guide[]
  @@map("users")
  @@schema("app")
}

model Church {
  id        Int      @id @default(autoincrement())
  name      String
  street    String
  city      String
  state     String
  zip       String
  website   String?
  email     String?
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  users User[]

  @@map("churches")
  @@schema("app")
}

model Guide {
  id        Int      @id @default(autoincrement())
  authorId Int @map("author_id")
  isPublic Boolean @default(true) @map("is_public")
  author User @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")

  versions GuideVersion[]

  @@map("guides")
  @@schema("app")
}

model GuideVersion {
  id        Int      @id @default(autoincrement())
  guideId Int @map("guide_id")
  name String
  description String
  isCurrent Boolean @default(true) @map("is_current")
  createdAt DateTime @default(now()) @map("created_at")

  guide Guide @relation(fields: [guideId], references: [id], onDelete: Cascade)
  sections GuideSection[]
  biblicalReferences GuideBiblicalReference[]
  journeys Journey[]

  @@index([guideId])
  @@map("guide_versions")
  @@schema("app")
}

model GuideBiblicalReference {
  id        Int      @id @default(autoincrement())
  guideVersionId Int @map("guide_version_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guideVersion GuideVersion @relation(fields: [guideVersionId], references: [id], onDelete: Cascade)

  @@map("guide_biblical_refs")
  @@schema("app")
}

model GuideSection {
  id Int @id @default(autoincrement())
  guideVersionId Int @map("guide_version_id")
  title String
  description String?
  ordinalPosition Int @map("ordinal_position")
  createdAt DateTime @default(now()) @map("created_at")

  guideVersion GuideVersion @relation(fields: [guideVersionId], references: [id], onDelete: Cascade)
  biblicalReferences GuideSectionBiblicalReference[]
  reflections Reflection[]

  @@unique([guideVersionId, ordinalPosition])
  @@index([guideVersionId])
  @@map("guide_sections")
  @@schema("app")
}

model GuideSectionBiblicalReference {
  id        Int      @id @default(autoincrement())
  guideSectionId Int @map("guide_section_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guideSection GuideSection @relation(fields: [guideSectionId], references: [id], onDelete: Cascade)

  @@map("guide_section_biblical_refs")
  @@schema("app")
}

model Journey {
  id Int @id @default(autoincrement())
  guideVersionId Int @map("guide_version_id")
  name String
  description String?
  ownerId Int? @map("owner_id")
  createdAt DateTime @default(now()) @map("created_at")

  guideVersion GuideVersion @relation(fields: [guideVersionId], references: [id], onDelete: Restrict)
  personalSections PersonalJourneySection[]
  reflections Reflection[]

  @@index([guideVersionId])
  @@map("journeys")
  @@schema("app")
}

model PersonalJourneySection {
  id Int @id @default(autoincrement())
  journeyId Int @map("journey_id")
  title String
  description String?
  ordinalPosition Int @map("ordinal_position")
  ownerId Int? @map("owner_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  journey Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)
  reflections Reflection[]

  @@unique([journeyId, ordinalPosition])
  @@map("personal_journey_sections")
  @@schema("app")
}

model Reflection {
  id Int @id @default(autoincrement())
  entryKey String @unique @map("entry_key")
  journeyId Int @map("journey_id")
  guideSectionId Int? @map("guide_section_id")
  personalSectionId Int? @map("personal_section_id")
  content String
  authorId Int? @map("author_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  journey Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)
  guideSection GuideSection? @relation(fields: [guideSectionId], references: [id])
  personalSection PersonalJourneySection? @relation(fields: [personalSectionId], references: [id])
  biblicalReferences ReflectionBiblicalReference[]

  @@index([journeyId])
  @@map("reflections")
  @@schema("app")
} 

model ReflectionBiblicalReference {
  id Int @id @default(autoincrement())
  reflectionId Int @map("reflection_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  reflection Reflection @relation(fields: [reflectionId], references: [id], onDelete: Cascade)
  @@map("reflection_biblical_refs")
  @@schema("app")
}

model GuideDraft {
  id        Int       @default(autoincrement())
  name String @map("name")
  userId    Int      @map("user_id")
  draftKey String   @map("draft_key") @id
  draftContent Json     @map("draft_json")
  updatedAt DateTime @updatedAt @default(now()) @map("updated_at")
  publishedAt DateTime?  @map("published_at")

  user User @relation(fields: [userId], references: [id])

  @@map("guide_drafts")
  @@schema("app")
}
