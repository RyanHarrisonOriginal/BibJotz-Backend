// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["app"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique @map("user_name")
  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  isPublic  Boolean  @default(true) @map("is_public")
  primaryChurchId  Int? @map("primary_church_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  church              Church?              @relation(fields: [primaryChurchId], references: [id])
  guideDrafts         GuideDraft[]
  guides              Guide[] 
  @@map("users")
  @@schema("app")
}

model Church {
  id        Int      @id @default(autoincrement())
  name      String
  street    String
  city      String
  state     String
  zip       String
  website   String?
  email     String?
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  users User[]

  @@map("churches")
  @@schema("app")
}

model Guide {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  biblicalReferences GuidBibleReference[]
  guideSections GuideSection[]
  journeys Journey[]
  isPublic Boolean @default(true) @map("is_public")
  authorId Int @map("created_by")
  author User @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("guides")
  @@schema("app")
}

model GuidBibleReference {
  id        Int      @id @default(autoincrement())
  guideId Int @map("guide_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guide Guide @relation(fields: [guideId], references: [id])

  @@map("guide_biblical_references")
  @@schema("app")
}

model GuideSectionBibleReference {
  id        Int      @id @default(autoincrement())
  guideSectionId Int @map("guide_section_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  guideSection GuideSection @relation(fields: [guideSectionId], references: [id])

  @@map("guide_section_biblical_references")
  @@schema("app")
}


model GuideSection {
  id Int @id @default(autoincrement())
  guideId Int @map("guide_id")
  ordinalPosition Int @map("ordinal_position")
  title String
  description String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  guide Guide @relation(fields: [guideId], references: [id])
  biblicalReferences GuideSectionBibleReference[]
  @@map("guide_sections")
  @@schema("app")
}

model Journey {
  id Int @id @default(autoincrement())
  title String
  ownerId Int @map("owner_id")
  guideId Int @map("guide_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  guide Guide @relation(fields: [guideId], references: [id])
  reflections Reflection[]
  
  @@map("journeys")
  @@schema("app")
}

model Reflection {
  id Int @id @default(autoincrement())
  content String
  authorId Int @map("author_id")
  journeyId Int @map("journey_id")
  guideSectionId Int @map("guide_section_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  journey Journey @relation(fields: [journeyId], references: [id])

  biblicalReferences ReflectionBiblicalReference[]

  @@map("reflections")
  @@schema("app")
} 

model ReflectionBiblicalReference {
  id Int @id @default(autoincrement())
  reflectionId Int @map("reflection_id")
  book String
  chapter Int
  startVerse Int @map("start_verse")
  endVerse Int @map("end_verse")
  createdAt DateTime @default(now()) @map("created_at")

  reflection Reflection @relation(fields: [reflectionId], references: [id])
  @@map("reflection_biblical_references")
  @@schema("app")
}

model GuideDraft {
  id        Int       @default(autoincrement())
  name String @map("name")
  userId    Int      @map("user_id")
  draftKey String   @map("draft_key") @id
  draftContent Json     @map("draft_json")
  updatedAt DateTime @updatedAt @default(now()) @map("updated_at")
  publishedAt DateTime?  @map("published_at")

  user User @relation(fields: [userId], references: [id])

  @@map("guide_drafts")
  @@schema("app")
}
